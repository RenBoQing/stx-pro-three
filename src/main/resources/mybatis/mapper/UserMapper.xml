<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stx.pro.mapper.UserMapper">
<!--    电话查询用户-->
    <select id="selectUserByTelNumber" resultType="com.stx.pro.pojo.User" parameterType="string">
        select *
        from fruit_user
        where telnumber = #{telnumber}
    </select>
<!--    查询所有的用户-->
    <select id="selectAllUsers" resultType="com.stx.pro.pojo.User">
        select *
        from fruit_user;
    </select>
    <!--使用电话号码登录-->
    <select id="queryUserByTelNumber" parameterType="string" resultType="com.stx.pro.pojo.User">
        select uid, nickname,  sex, avatarurl, telnumber, email, status, vgrade, vcount, birthday
        from fruit_user
        where telnumber = #{telnumber}
          and password = #{password}
    </select>
    <!-- 使用邮箱登录-->
    <select id="queryUserByEmail" resultType="com.stx.pro.pojo.User" parameterType="string">
        select uid, nickname, sex, avatarurl, telnumber, email, status, vgrade, vcount, birthday
        from fruit_user
        where email = #{email}
          and password = #{password}
    </select>
    <select id="deleteByUid" parameterType="string" resultType="int">
        delete from fruit_user where uid=#{uid}
    </select>
</mapper>